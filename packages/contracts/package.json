{
  "name": "openoracle-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for OpenOracle Protocol - extensible oracle routing and monetization",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "balance": "node scripts/check-balance.js",
    "check": "node scripts/check-balance.js",
    "deploy:base-sepolia": "hardhat run deployment/deploy.js --network baseSepolia",
    "deploy:base": "hardhat run deployment/deploy.js --network baseMainnet",
    "deploy:base-mainnet-safe": "hardhat run scripts/deploy-mainnet-safe.js --network baseMainnet",
    "deploy:local": "hardhat run deployment/deploy.js --network hardhat",
    "verify:base-sepolia": "hardhat verify --network baseSepolia",
    "verify:base": "hardhat verify --network baseMainnet",
    "verify:mainnet": "node scripts/verify-mainnet.js",
    "create-poll": "hardhat run scripts/interact.js --network baseSepolia",
    "create-poll:mainnet": "hardhat run scripts/interact.js --network baseMainnet",
    "console:base-sepolia": "hardhat console --network baseSepolia",
    "console:base": "hardhat console --network baseMainnet",
    "interact:mainnet": "node scripts/interact-base.js",
    "test:contract": "node scripts/test-contract.js",
    "monitor": "node scripts/monitor-polls.js",
    "monitor:simple": "node scripts/monitor-polls.js simple",
    "clean": "hardhat clean",
    "node": "hardhat node --fork https://mainnet.base.org"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "flow",
    "smart-contracts",
    "prediction-markets",
    "polling"
  ],
  "author": "PollyPoll Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "ethers": "^5.8.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "dotenv": "^16.3.1"
  }
